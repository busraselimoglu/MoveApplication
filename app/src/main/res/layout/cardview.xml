<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
            <ImageView
                    android:id="@+id/gorseleee"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/ic_launcher"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filmadicard"
                    android:text="Title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#685D5D"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/gorseleee"
                    android:layout_toEndOf="@+id/gorseleee"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filmkonucard"
                    android:text="Konuuu"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#a9a9a9"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/gorseleee"
                    android:layout_toEndOf="@+id/gorseleee"

            />
            <RatingBar
                    android:id="@+id/ratingbarcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".6"
                    android:scaleY=".6"
                    android:transformPivotX="0dp"
                    android:transformPivotY="70dp"
                    android:layout_marginTop="60dp"
                    android:stepSize="0.1"
                    android:isIndicator="true"
            />
            <Button
                    android:text="PaylaÅŸ"
                    android:layout_width="74dp"
                    android:layout_height="37dp"
                    android:id="@+id/paylascard"
                    android:textStyle="italic"
                    android:textSize="12dp"
                    android:layout_marginTop="82dp"
                    android:layout_marginLeft="300dp"

            /><![CDATA[

            >
        ]]>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    ></LinearLayout>
